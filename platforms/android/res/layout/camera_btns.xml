<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayoutDummy"
        android:layout_width="1097dp"
        android:layout_height="950sp"
        android:gravity="center"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/pickBtnContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:gravity="center"
            >

            <FrameLayout
                android:id="@+id/flBtnContainer"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"


                >

                <Button
                    android:id="@+id/ibCapture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/camera_btn_bg" />

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu_camera" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/ic_menu_cancel"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/ibRetake"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"

                    android:background="@drawable/camera_btn_bg_l" />

                <ImageView
                    android:id="@+id/btn_text_r"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_menu_cancel" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/ic_menu_ok"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone">

                <Button
                    android:id="@+id/ibUse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@drawable/camera_btn_bg_r" />

                <ImageView
                    android:id="@+id/btn_text_l"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_menu_ok" />

            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
